@import "../nav-foot/nav-foot-template.wxss";
page, .shop-list, .menu-avatar, .not-data {
    height: 100%;
}

page {
    overflow-y: hidden;
}

.cu-bar.search {
    margin-bottom: 10rpx;
}

.sort-wrap {
    display: flex;
    flex-direction: row;
    text-align: center;
    line-height: 80rpx;
    background: #fff;
    border-bottom: 2px solid #f5f5f5;
}

.sort-item {
    flex: 1;
    position: relative;
}

.sort-choose {
    position: absolute;
    top: 0;
    right: 30rpx;
}

.VerticalMain {
    display: flex;
    height: calc(100% - 300rpx);
    padding-bottom: env(safe-area-inset-bottom);
}

.VerticalNav.nav {
    width: 200rpx;
    white-space: initial;
    background: #fff;
}

.VerticalNav.nav .cu-item {
    width: 100%;
    text-align: center;
    background-color: #fff;
    margin: 0;
    border: none;
    height: 50px;
    position: relative;
}

.VerticalNav.nav .cu-item.cur {
    background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item.cur::after {
    content: "";
    width: 8rpx;
    height: 30rpx;
    border-radius: 10rpx 0 0 10rpx;
    position: absolute;
    background-color: currentColor;
    top: 0;
    right: 0rpx;
    bottom: 0;
    margin: auto;
}

.shop-list {
    width: 100%;
    padding: 0 20rpx;
}

.shop-list scroll-view {
    background: #fff;
}

.shop-list .cu-list {
    margin-top: 0 !important;
}

.shop-list-content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.shop-item {
    width: 50%;
    padding: 5rpx;
}

.shop-item image {
    width: 100%;
}

.shop-info {
    padding: 5rpx 20rpx;
}

.shop-name {
    font-size: 24rpx;
    height: 67rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.shop-price {
    margin-top: 10rpx;
    color: #d9524e;
    font-size: 32rpx;
}

.price-filtrate {
    display: flex;
    flex-direction: row;
}

.price-filtrate text {
    width: 100rpx;
    line-height: 50rpx;
}

.partition {
    width: 50rpx;
    position: relative;
}

.partition::after {
    content: '';
    position: absolute;
    width: 20rpx;
    height: 1px;
    background: #333;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.price-filtrate input {
    border: 1px solid #ccc;
    border-radius: 4px;
    height: 50rpx;
    text-align: left;
    padding: 0 10rpx;
}

.reset-btn {
    margin-top: 20rpx;
    padding-top: 10rpx;
}

button.action {
    padding: 0;
    background: transparent;
    line-height: normal; 
}