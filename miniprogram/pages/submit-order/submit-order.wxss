.tabbar-height {
    min-height: 110rpx;
    height: calc(110rpx + env(safe-area-inset-bottom) / 2);
}

.wrap-area {
    background: #fff;
    border-radius: 4px;
    margin: 20rpx;
    padding-top: 20rpx !important;
    padding-bottom: 30rpx !important;
}

.user-info text {
    font-size: 24rpx;
    color: #999;
}

.address {
    margin-top: 10rpx;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.wrap-area.shop-list {
    margin-top: 0;
    padding: 0!important;
}

.shop-info {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
}

.shop-info .shop-img {
    width: 200rpx;
    margin-right: 20rpx;
}

.unit-price {
    display: flex;
    flex-direction: row;
    width: 100%;
}

.shop-detail {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-top:20rpx;
}

.shop-name {
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: calc(100% - 150rpx);
}

.shop-price {
    width: 150rpx;
    text-align: right;
    padding-right: 20rpx;
}

.shop-price .text-gray {
    font-size: 24rpx;
}

.subtotal {
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
    align-items: center;
}

.total-price {
    text-align: right;
    width: 520rpx;
}

.total-price .text-gray {
    font-size: 24rpx;
    margin-right: 10rpx;
}

.total-price .text-orange {
    font-size: 30rpx;
}