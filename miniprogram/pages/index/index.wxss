@import "../nav-foot/nav-foot-template.wxss";
.container {
    padding-bottom: 110rpx;
}

swiper {
    width: 100%;
    height: 500rpx;
}

swiper image {
    width: 100%;
    height: 500rpx;
}

.type-list {
    display: flex;
    padding-top: 20rpx;
    background: #fff;
}

.type-item {
    width: 25%;
    text-align: center;
    margin-bottom: 20rpx;
}

.type-item image {
    display: block;
    margin: 0 auto;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.type-item text {
    margin-top: 20rpx;
}

.hot-list {
    display: flex;
    background: #fff;
    padding-left: 20rpx;
}

.hot-item {
    display: flex;
    flex-direction: column;
    width: 50%;
    padding: 0 20rpx 0 0;
}

.shop-name {
    font-size: 24rpx;
    height: 67rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.shop-price {
    color: #D9524E;
    font-size: 32rpx;
    padding-bottom: 10rpx;
}