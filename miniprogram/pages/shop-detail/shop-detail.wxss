.tabbar-height {
    min-height: 100rpx;
    height:calc(100rpx + env(safe-area-inset-bottom) / 2);
}

swiper {
    width: 100%;
    height: 750rpx;
}

swiper image {
    width: 100%;
    height: 750rpx;
}

.info {
    background: #fff;
    padding:  20rpx 30rpx; 
}

.shop-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 10rpx;
}

.shop-price {
    font-size: 32rpx;
    color: #D9524E;
}

.promise {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    text-align: center;
    line-height: 100rpx;
    background: #fff;
}

.promise view {
    flex: 1;
}

.cu-bar.solid-bottom {
    margin: 10rpx 0;
}

.nav {
    display: flex;
}

.nav .cu-item {
    flex: 1;
}

.shop-detail {
    background: #fff;
}

.shop-detail image {
    width: 100%;
}

.detail-text {
    line-height: 50rpx;
    padding: 10rpx 30rpx;
}

.shop button {
    border-radius: 0;
}